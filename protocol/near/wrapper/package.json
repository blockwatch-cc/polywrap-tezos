{
  "name": "near-polywrap-api",
  "description": "Re-implements near-api-js as a secure, fast, composable Polywrapper",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "prettier-format": "npx prettier --write ./src",
    "reset": "yarn clean && yarn && yarn build",
    "postinstall": "patch-package",
    "clean": "npx rimraf ./node_modules ./build ./coverage ./.w3 ./**/w3",
    "build": "npx w3 build",
    "codegen": "npx w3 codegen",
    "test:env:up": "npx w3 test-env up",
    "test:env:down": "npx w3 test-env down",
    "deploy": "npx w3 build --ipfs http://localhost:5001 --test-ens near-api.eth",
    "test:e2e": "jest --passWithNoTests --runInBand --verbose",
    "test:RpcQueries": "jest e2eRpcQueries --passWithNoTests --runInBand --verbose --silent=false",
    "test:e2eMutations": "jest e2eMutations --passWithNoTests --runInBand --verbose --silent=false",
    "test:JsonRpcQueries": "jest e2eJsonRpcQueries --passWithNoTests --runInBand --verbose --silent=false",
    "test:Transactions": "jest e2eTransactions --passWithNoTests --runInBand --verbose --silent=false",
    "test:Wallet": "jest e2eWallet.spec --passWithNoTests --runInBand --verbose --silent=false",
    "test:Format": "jest e2eFormat --passWithNoTests --runInBand --verbose --silent=false",
    "test": "yarn test:e2e",
    "test:ci": "yarn test:e2e"
  },
  "dependencies": {
    "as-base58": "^0.1.1",
    "as-base64": "^0.2.0",
    "as-fraction": "^0.2.0",
    "localstorage-polyfill": "^1.0.1",
    "mock-browser": "^0.92.14"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "@web3api/cli": "0.0.1-prealpha.71",
    "@web3api/client-js": "0.0.1-prealpha.71",
    "@web3api/ens-plugin-js": "0.0.1-prealpha.71",
    "@web3api/ethereum-plugin-js": "0.0.1-prealpha.71",
    "@web3api/ipfs-plugin-js": "0.0.1-prealpha.71",
    "@web3api/test-env-js": "0.0.1-prealpha.71",
    "@web3api/wasm-as": "0.0.1-prealpha.71",
    "assemblyscript": "0.19.1",
    "bn.js": "5.2.0",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.0",
    "jest": "27.0.6",
    "near-api-js": "^0.44.2",
    "near-hello": "0.5.1",
    "prettier": "2.2.1",
    "solc": "0.8.3",
    "ts-jest": "27.0.4",
    "ts-node": "8.10.2",
    "typescript": "4.0.7",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0"
  }
}
